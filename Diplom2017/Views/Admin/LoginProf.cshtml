
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>


    <div class="container" style="margin-top:10%">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4">   </div>
            <div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 shadow">
                <div style="padding-top:2%; padding-bottom:2%">
                    <h3>Login Form</h3>

                    <form action="@Url.Action("Index", "Admin")" method="post" id="loginForm">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input class="form-control" type="text" name="email" id="name" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input class="form-control" type="password" name="password" id="password" />
                            </div>
                        </div>
                        @Html.ValidationMessage("Error", "", new { @class = "label label-danger" })
                        <div class="form-group">
                            <button type="submit" class="btn btn-submit"><i class="glyphicon glyphicon-log-in"></i> Log in </button>
                        </div>
                    </form>

                </div>



            </div>
            <div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4"></div>

        </div>
    </div>
    <script src="bootstrap/js/bootstrap.js">

    </script>
</body>
</html>